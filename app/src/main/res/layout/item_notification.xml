<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/notification_root"
    android:background="@color/colorAccent"
    android:padding="@dimen/padding_default">

    <TextView
        android:id="@+id/notification_creator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Creator" />

    <TextView
        android:id="@+id/notification_date_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_small"
        android:textAlignment="textEnd"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/notification_creator"
        tools:text="03.03.2003" />

    <TextView
        android:id="@+id/notification_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_small"
        android:textAlignment="textEnd"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/notification_date_time"
        tools:text="Notification content" />

</androidx.constraintlayout.widget.ConstraintLayout>